
@{
    ViewData["Title"] = "EmployeeBonuses";
    Layout = "~/Views/Shared/Employeer/_EmployeerDetailsLayout.cshtml";
}

@section header{
    <h3>Onur Çekiç</h3>
}

@section tabs{
    <div class="tabs">
        <a href="@Url.Action("EditEmployee","Manager")">Genel</a>
        <a href="@Url.Action("EmployeeRequests","Manager")">Talepler</a>
        <a href="@Url.Action("EmployeeDebits","Manager")">Zimmetler</a>
        <a href="@Url.Action("EmployeeBonuses","Manager")">Primler</a>
        <a href="@Url.Action("EmployeeFiles","Manager")">Dosyalar</a>
        <a href="@Url.Action("EmployeeShiftBreak","Manager")">Vardiya ve Molalar</a>
    </div>
}

@section functionality {
    <!-- Search Bar -->
    <input type="text" class="square-input square-input-md" placeholder="Arama">

    <div class="d-flex radio-group">
        <button class="btn btn-primary ml-2" onclick="openModal('bonusModal')">Prim Ekle</button>
    </div>
}

<div>
    <table class="table table-striped width-100">
        <thead>
            <tr>
                <th>Açıklama</th>
                <th>Veriliş Tarihi</th>
                <th>Miktar</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Şirket görüşmeleri için cep telefonu aldı.</td>
                <td>29 Eylül 2021</td>
                <td>3149,90 ₺</td>
                <td>
                    <button class="btn btn-danger mx-auto">Sil</button>
                    <br>
                    <button class="btn btn-warning mx-auto" onclick="openModal('bonusModal')">Güncelle</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section modal {
    <div class="crud-modal" id="bonusModal">
        <div class="modal-inside">
            <div class="d-flex jc-between ai-center mb-3">
                <h4>Zimmet Ekle</h4>
                <span class="btnCloseModal" onclick="closeModal('bonusModal')">&times;</span>
            </div>

            <div class="modal-content">
                <!-- Put What u Want -->
                <div class="my-3 d-flex">
                    <div class="mr-1">
                        <label for="amountOfBonus" class="square-input-label">Prim Miktarı</label>
                        <input type="number" class="square-input" id="amountOfBonus">
                    </div>

                    <div>
                        <label for="givenDate" class="square-input-label">Veriliş Tarihi</label>
                        <input type="datetime-local" class="square-input" id="givenDate">
                    </div>
                </div>

                <div class="mt-3 mb-1">
                    <label for="description" class="square-input-label">Açıklama</label>
                    <textarea name="description" id="description" cols="50" rows="10"
                              class="square-input"></textarea>
                </div>
                <div class="my-1">
                    <a href="#" class="btn btn-primary ml-auto">Kaydet</a>
                </div>
            </div>
        </div>
    </div>

}

