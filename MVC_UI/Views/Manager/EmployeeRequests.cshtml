
@{
    ViewData["Title"] = "EmployeeRequests";
    Layout = "~/Views/Shared/Employeer/_EmployeerDetailsLayout.cshtml";
}

@section header{
    <h3>Onur Çekiç</h3>
}

@section tabs{
    <div class="tabs">
        <a href="@Url.Action("EditEmployee","Manager")">Genel</a>
        <a href="@Url.Action("EmployeeRequests","Manager")">Talepler</a>
        <a href="@Url.Action("EmployeeDebits","Manager")">Zimmetler</a>
        <a href="@Url.Action("EmployeeBonuses","Manager")">Primler</a>
        <a href="@Url.Action("EmployeeFiles","Manager")">Dosyalar</a>
        <a href="@Url.Action("EmployeeShiftBreak","Manager")">Vardiya ve Molalar</a>
    </div>
}


@section functionality{
    <!-- Search Bar -->
    <input type="text" class="square-input square-input-md" placeholder="Arama">
}

<div>
    <table class="table table-striped width-100">
        <thead>
            <tr>
                <th>Kategori</th>
                <th>İhtiyaç</th>
                <th>Talep Tarihi</th>
                <th>Açıklama</th>
                <th> </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td>Zimmet</td>
                <td>Bilgisayar</td>
                <td>28 Eylül 2021</td>
                <td>Ekstra bellek gerekli</td>
                <td>
                    <button class="btn btn-danger mx-auto" onclick="openModal('approveModal')">Reddet</button>
                    <br>
                    <button class="btn btn-success mx-auto">Onayla</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section modal{
    <div class="crud-modal" id="approveModal">
        <div class="modal-inside">
            <div class="d-flex jc-between ai-center mb-3">
                <h4>Zimmet Ekle</h4>
                <span class="btnCloseModal" onclick="closeModal('approveModal')">&times;</span>
            </div>

            <div class="modal-content">
                <!-- Put What u Want -->
                <div class="mt-3 mb-1">
                    <label for="description" class="square-input-label">Açıklama</label>
                    <textarea name="description" id="description" cols="50" rows="10"
                              class="square-input"></textarea>
                </div>
                <div class="my-1">
                    <a href="#" class="btn btn-danger ml-auto">Reddet</a>
                </div>
            </div>
        </div>
    </div>
}