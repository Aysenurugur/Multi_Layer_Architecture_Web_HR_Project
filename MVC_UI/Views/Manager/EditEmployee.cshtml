@inject IHttpContextAccessor HttpContextAccessor
@{
    Guid employeeId = @Guid.Parse(HttpContextAccessor.HttpContext.Session.GetString("employeeId"));
}
@{
    ViewData["Title"] = "EditEmployee";
    Layout = "~/Views/Shared/Employeer/_EmployeerDetailsLayout.cshtml";
}


@section header{ 
<h3>Onur Çekiç</h3>
}

@section tabs{ 
    <div class="tabs">
        <a asp-action="EditEmployee" asp-controller="Manager" asp-route-id="@employeeId">Genel</a>
        <a asp-action="EmployeeRequests" asp-controller="Manager" asp-route-id="@employeeId">Talepler</a>
        <a asp-action="EmployeeDebits" asp-controller="Manager" asp-route-id="@employeeId">Zimmetler</a>
        <a asp-action="EmployeeBonuses" asp-controller="Manager" asp-route-id="@employeeId">Primler</a>
        <a asp-action="EmployeeFiles" asp-controller="Manager" asp-route-id="@employeeId">Dosyalar</a>
        <a asp-action="EmployeeShiftBreak" asp-controller="Manager" asp-route-id="@employeeId">Vardiya ve Molalar</a>
    </div>
}

<input type="hidden" id="employeeId" value="@employeeId" />

<div class="employee-detail-section">
    <div class="c-card width-100">
        <div class="c-card-header" id="employeeDetail">

        </div>
        <div class="c-card-body width-100">
            <div class="d-flex jc-between mb-3 mt-3">
                <span>İşe Başlama</span>
                <span>27 Haziran 2021</span>
            </div>
            <div class="d-flex jc-between mb-3">
                <span>Şube</span>
                <span>Kadıköy</span>
            </div>
            <div class="d-flex jc-between mb-3">
                <span>Ünvan</span>
                <span>Yazılım Mühendisi</span>
            </div>
            <div class="d-flex jc-between mb-3">
                <span>Şirket</span>
                <span>kd34</span>
            </div>
            <div class="d-flex jc-between mb-3">
                <span>Telefon</span>
                <span>0556454654564</span>
            </div>
        </div>
    </div>
    <div class="c-card width-100">
        <div class="c-card-header">
            <span>Genel Bilgiler</span>
        </div>
        <div class="c-card-body width-100">
            <form id="managerEmployeeEditForm">
                <div class="mb-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100" type="text" id="firstName" name="firstName">
                    <label class="square-input-label" for="firstName">Ad</label>
                </div>

                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="text" id="lastName" name="lastName">
                    <label class="square-input-label" for="lastName">Soyad</label>
                </div>

                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="text" id="title" name="title">
                    <label class="square-input-label" for="title">Ünvan</label>
                </div>

                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="text" id="mail" name="mail">
                    <label class="square-input-label" for="mail">E-Posta</label>
                </div>

                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="text" id="phoneNumber" name="phoneNumber">
                    <label class="square-input-label" for="phoneNumber">Telefon Numarası</label>
                </div>

                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="datetime-local" id="startDate" name="startDate">
                    <label class="square-input-label" for="startDate">İşe Başlama Tarihi</label>
                </div>
                <div class="my-4 d-flex flex-column">
                    <input class="square-input square-input-md width-100 " type="datetime-local" id="birthDate" name="birthDate">
                    <label class="square-input-label" for="birthDate">Doğum Tarihi</label>
                </div>
                <div class="mt-3 d-grid">
                    <button class="btn btn-warning btn-sq" id="updateEmployee">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section scripts{ 
    <script src="~/ajax/Manager/employeeDetail.js"></script>
}

